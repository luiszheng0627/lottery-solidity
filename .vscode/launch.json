{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach",
			"port": 3000,
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node"
		},
		{
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			"program": "/usr/local/share/.config/yarn/global/node_modules/truffle/build/cli.bundled.js",
			"args": [
				"test",
				"--debug",
				"--network ganache"
			],
			"cwd": "${workspaceRoot}",
			"outFiles": [
				"${workspaceRoot}/test/**/*"
			],
		}
	]
}